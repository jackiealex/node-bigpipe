@import "../../liblus/_css3";
@import "../../liblus/widget";

.mod-interestlabel-publish {
	padding: 20px;
	.row {
		margin: 10px 0;
	}
	
	.category-list {
		clear()
		li {
			size(90px);
			float: left;
			margin: 0 4px 4px 0;
			position: relative
			overflow: hidden;
			background: blue;
			&.selected {
				&::after {
					size(40px);
					line-height: 40px;
					border-radius: 20px;
					left: 50%;
					top: 50%;
					margin: -20px 0 0 -20px;;
					content: "已选";
					color: #fff;
					text-align: center;
					position: absolute;
					background: rgba(0, 255, 0, 0.8);
				}
			}
		}
		.name {
			position: absolute;
			left: 0;
			bottom: 0;
			width: 100%;
			color: #fff;
			background: rgba(0, 0, 0, 0.6);
			line-height: 20px;
			height: 20px;
			padding-left: 4px;
			text-align: center
		}
	}
}
 
