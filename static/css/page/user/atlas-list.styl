@import "../../liblus/_css3";
@import "../../liblus/widget";

// start file
.mod-user-atlas-list {
	padding: 20px;
	.title {
		box()		
		margin-bottom: 20px;
	}
	.title span {
		color: green;
	}
	.title div {
		font-size: 14px;
		padding-left: 12px;
		p {
			padding: 2px;
			height: 22px;
			line-height: 22px;
		}
	}
	.title img {
		width: 48px;
		border-radius: 4px;
		height: auto;
		display: inline-block;
	}
	.go-back {
		float: right;
		background: #d14836;
		padding: 4px;
		font-size: 14px;
		color: #fff;
	}
	ul {
		clear()
		li {
			margin-bottom: 5px; 
			float: left;
			width: 25%;
			height: 240px;
			
			position: relative;
			&:hover {
				.text {
					transform(translateY(100%) rotate(720deg));
				}
			}
			a {
				width: 100%;
				height: 100%;
				position: relative;
				overflow: hidden;
				box();
				align();
				orient();
				pack()
				img {
					width: 100%;
				}
			}
			.timer-counter {
				fontheight(30px);
				i {
					size(24px)
					margin: 3px 6px;
					float: left;
					background: url($imgPath + '/icons/clock.png') no-repeat left center;
					background-size: 24px;
				}
				position: absolute;
				width: 100%;
				margin-top: -(@height/2);
				text-align: center;
				background: rgba(33, 33, 33, 0.62);
				color: #fff;
				top: 50%;
			}
			.text {
				
				transition(all 0.3s ease-in);

				position: absolute;
				width: 100%;
				height: 100%;
				top: -100%;

				background: rgba(209,72,54,0.82);
				color: #fff;
				.delete {
					size(32px);
					background: #000 url($imgPath + '/icons/delete.png') no-repeat center center;
					background-size: 12px;
					position: absolute;
					right: 0;
					top:  0;
					cursor: pointer;
					border-bottom-left-radius: (@width/2);
				}
				.recommend {
					size(32px);
					background: #000 url($imgPath + '/icons/heart-broken.png') no-repeat center center;
					background-size: 12px;
					position: absolute;
					right: 0;
					top:  40px;
					cursor: pointer;
					border-bottom-left-radius: (@width/2);
					&.done {
						background-image: url($imgPath + '/icons/heartx32.png');
					}
				}
				.text-content {
					margin: 20px;
				}
				.origin {
					box()
					pack(justify);
					margin: 10px;
					color: #e8e8e8;
				}
				.num {
					color: #e8e8e8;
				}
				.loc {
					fontheight(24px);
					background: url($imgPath + '/icons/16/location.png') no-repeat left center;
					background-size: auto 14px;
					padding-left: 16px;
					text-align: left;
				}
				h2 {
					fontheight(24px);
					box()
					pack(justify);
					font-size: 14px;
					p {
						i {
							size(24px)
							float: left;
							background: url($imgPath + '/icons/person.png') no-repeat left center;
							background-size: 24px;
						}
						&.time {
							i {
								background-image: url($imgPath + '/icons/clock.png');
								background-size: 16px;
							}
						}

					}
				}
				.desc {
					text-align: left;
					font-size: 16px;
					margin-top: 20px;
					max-height: 60px;
					overflow: hidden;
					-webkit-text-overflow: ellipsis;
					-o-text-overflow: ellipsis;
					-ms-text-overflow: ellipsis;
					line-height: 20px;
				}
				.op {
					box()
					pack()
					align()
					height: 22px;
					font-size: 14px;
					position: absolute; 
					bottom: 10px;
					left: 0;
					width: 100%;
					.fav, .speak {
						flex()
						text-align: center;
						span {
							size(16px)
							display: inline-block;
							padding-left: 20px;
							background: url($imgPath + '/icons/16/heart.png') no-repeat left center;

						}
					}
					.speak span {
						background: url($imgPath + '/icons/16/bubble.png') no-repeat left center;
					}
				}
			}
		}
	}
}

.page-nav {
	@extend .class-page-navi
}
