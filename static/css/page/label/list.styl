@import "../../liblus/_css3";
@import "../../liblus/widget";

// start file
.mod-label-list {
	margin: 20px;
	padding-top: 12px;
	position: relative
	.header {
		margin-bottom: 12px;
	}
	.tab-header {
		margin: 12px 0;
		.item {
			cursor: pointer;
		}
	}
	ul {
		clear()
		li {
			width: 22%;
			border-radius: 3px 3px 0 0;
			float: left;
			overflow: hidden;
			position: relative;
			margin: 1.5%;
			color: #fff;
			h2 {
				font-size: 14px;
				padding: 10px;
				background: #FF3221;
			}

			.wrap {
				padding: 0 10px;
				color: #666;
				background: #E7E1B8;

				p {

					padding: 6px 0;
					border-bottom: 1px solid #eee;
					height: 32px;
					overflow: hidden;
					text-overflow()
				}
				.order {
					border: none;
				}
			}
			.wave {
				display: none;
				background: url($imgPath + '/images/wave.png') repeat left bottom;
				margin: 0 10px;
				height: 10px;
			}
		}
	}
}
 
.page-nav {
	@extend .class-page-navi
}
