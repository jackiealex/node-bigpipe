@import "../../liblus/_css3";
@import "../../liblus/widget";

// start file
.mod-version-list {
	margin: 20px;
	position: relative
	.header {
		padding-bottom: 20px;
	}
	.tab-header {
		margin: 12px 0;
		.item {
			cursor: pointer;
		}
	}
	
	ul {
		clear()
		li {
			size(160px)
			float: left;
			overflow: hidden;
			position: relative;
			margin: 10px;
			background: #000;
			.name {
				fontheight(30px);
				position: absolute;
				left: 0;
				right: 0;
				top: 0;
				background: rgba(33,33,33, 0.62);
				padding-left: 8px;
				color: #fff;
			}
			.edit {
				size(32px)
				position: absolute;
				top: 0;
				right: 0;
				color: #fff;
				border-radius: 0 0 0 15px ;
				background: #000 url($imgPath + '/icons/edit.png') no-repeat center center;
				background-size: 16px;
				display: none;
			}
			
			&:hover {
				.text {
					transform(translateY(100%) rotate(720deg));
				}
				.name {
					display: none;
				}
				.edit {
					display: block;
				}
			}
		}
	}
}
 
.page-nav {
	@extend .class-page-navi
