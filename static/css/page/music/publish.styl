@import "../../liblus/_css3";
@import "../../liblus/widget";

.mod-music-publish {
	padding: 20px;
	select.ui.dropdown {
		height: 32px !important;
		background: #fff;
		visibility: visible;
		option {
			width: 500px;
			height: 50px;
		}
	}
	.files {
		position: relative;
	    padding: 45px 15px 15px;
	    margin: 15px 0;
	    margin-bottom: 0;
	    background-color: #fafafa;
	    box-shadow: inset 0 3px 6px rgba(0, 0, 0, .05);
	    border-color: #e5e5e5 #eee #eee;
	    border-style: solid;
	    border-width: 1px 0;
		clear()
		h2 {
			text-align: center
		}
		.btn-bottoms {
			clear();
			clear: both;
		}
		.file-box {
			margin: 20px 10px;
			position: relative;
			background: #eee;
			float: left;
			size(200px);
			&.audio {
				background: green;
			}
			&.succ {
				background: rgba(0, 255, 0, 1);
			}
			&.fail {
				background: rgba(255, 0, 0, 1);
			}
			&.warn {
				background: rgba(255, 255, 0, 1);
			}
			.btn-delete {
				position: absolute;
				size(30px);
				border-radius: 100%;
				top: -15px;
				right: -15px;
				background: #ddd;
				fontheight(30px);
				text-align: center
				z-index: 1;
				cursor: default;
				display: none;
				
			}
			&:hover {
				.btn-delete {
					display: block;
				}
				.btn-preview {
					display: block
				}
			}
			.progress-stick {
				position: absolute;
				height: 100%;
				left: 0;
				top: 0;
				bottom: 0
				z-index: 9;
				background: rgba(0, 255, 0, 0.628);
				width: 0;
			}
			.btn-preview {
				width: 100%;
				left: 0;
				bottom: 0;
				background: #ddd;
				fontheight(30px);
				text-align: center
				z-index: 11;
				position: absolute
				cursor: default;
				display: none
			}
			.preview-container {
				position: absolute;
				display: block;
				size(100%);
				left: 0;
				top: 0;
				bottom: 0
				z-index: 0;
			}
		}
	}
	.file-cover {
		.btn-preview {
			display: none;
		}
	}
	.webuploader-dnd-over {
		background: green;
	}
	
	.tips {
		text-align: center;
		color: #eee;
		position: absolute;
		top: 20px;
		left: 0;
		width: 100%;
		font-size: 18px;
	}
	.file-picker {
		size(100%);
		z-index: 1;
		position: absolute;
		left: 0;
		top: 0;
		box()
		pack(center)
		align(center)
		// background: url($imgPath + '/icons/image-upload.png') no-repeat center 40px;
	}
}