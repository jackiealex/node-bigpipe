@import "./_setting";

@keyframes dot-highlight {
    0% {
        box-shadow: 0 0 0 0px  #fff, 0 0 0 0px #fff;
    }
    50% {
        box-shadow: 0 0 0 12px rgba(255, 255, 255, 0.2), 0 0 0 20px  rgba(255, 255, 255, 0.1);
    }
    75% {
        box-shadow: 0 0 0  5px  rgba(255, 255, 255, 0.2), 0 0 0 10px  rgba(255, 255, 255, 0.1);
    }
    100% {
        box-shadow: none;
    }
} 
@keyframes flicker {
	0% {
		box-shadow: 0 0 5px 4px rgba(255,255,255,0);
	}
	100% {
		box-shadow: 0 0 5px 4px rgba(131,241,241,0.7);
	}
}
